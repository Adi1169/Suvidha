<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/border"
    android:onClick="morey">


    <TextView
        android:id="@+id/firename"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textSize="35dp"
        android:fontFamily="serif-monospace"
        android:layout_marginRight="15dp"
        android:text="TextView"
        android:textColor="@color/orange"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp" />

    <TextView
        android:id="@+id/fireemail"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/orange"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="15dp"
        android:drawableLeft="@drawable/email"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/firename"
        tools:layout_editor_absoluteX="47dp" />

    <TextView
        android:id="@+id/firephone"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/orange"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/fireemail"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/fireinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/orange"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/firephone"
        tools:layout_editor_absoluteX="1dp" />

    <Button
        android:id="@+id/More"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Call"
        android:background="@drawable/servedy"
        android:drawableLeft="@drawable/phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.953"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firephone" />
</androidx.constraintlayout.widget.ConstraintLayout>