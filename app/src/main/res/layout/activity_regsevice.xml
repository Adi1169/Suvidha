<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    tools:context=".regsevice">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:onClick="tocate"
        android:padding="10dp"
        android:src="@drawable/back"></ImageView>

    <EditText
        android:id="@+id/name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/border"
        android:drawableLeft="@drawable/ic_action_name"
        android:ems="10"
        android:hint="Name"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/colorgrey" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:background="@drawable/border"
        android:drawableLeft="@drawable/phone"
        android:ems="10"
        android:hint="phone"
        android:inputType="phone"
        android:textColor="@color/black"
        android:textColorHint="@color/colorgrey" />


    <EditText
        android:id="@+id/description"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:background="@drawable/border"
        android:drawableLeft="@drawable/description"
        android:ems="10"
        android:hint="Experience/Description"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/colorgrey" />

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pword"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="220dp"
        android:textColor="@color/black"
        >

        <RadioButton
            android:id="@+id/Chef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="type"
            android:buttonTint="@color/orange"
            android:text="Chef"
            android:textColor="@color/black"
            android:textColorLink="@color/colorblizardblue" />

        <RadioButton
            android:id="@+id/Driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="type"
            android:buttonTint="@color/orange"
            android:text="Driver"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@+id/Nurse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="type"
            android:buttonTint="@color/orange"
            android:text="Nurse"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@+id/Plumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="type"
            android:buttonTint="@color/orange"
            android:text="Plumber"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@+id/Mechanic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="type"
            android:buttonTint="@color/orange"
            android:text="Mechanic"
            android:textColor="@color/black" />

    </RadioGroup>

    <Button
        android:id="@+id/Register"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/pword"

      android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"

        android:background="@drawable/servedy"
        android:clickable="false"
        android:onClick="onregister"
        android:text="Register"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/profile"
        android:layout_width="101dp"
        android:layout_height="106dp"
        android:layout_alignBottom="@+id/description"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="250dp"
        android:layout_marginBottom="-285dp"
        app:srcCompat="@drawable/border" />

    <TextView
        android:id="@+id/browse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/description"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="177dp"
        android:layout_marginBottom="-274dp"
        android:text="Browse"
        android:textColor="@color/black"
        android:onClick="permission"/>



</RelativeLayout>